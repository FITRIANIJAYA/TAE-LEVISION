<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/genreChip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:textSize="14sp"
    android:textStyle="bold"
    android:fontFamily="sans-serif-medium"
    android:checkable="true"
    app:chipBackgroundColor="@drawable/chip_background_selector"
    app:chipStrokeWidth="1.5dp"
    app:chipStrokeColor="@color/purple_primary"
    app:chipCornerRadius="16dp"
    android:elevation="2dp"
    app:checkedIconVisible="false"
    app:rippleColor="@color/purple_primary"
    android:textColor="@drawable/chip_text_selector"
    app:ensureMinTouchTargetSize="true"
    style="@style/Widget.MaterialComponents.Chip.Filter" />